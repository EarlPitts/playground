cabal-version:   3.0
name:            ci-server
version:         0.1.0.0
license:         GPL-3.0-only
license-file:    LICENSE
build-type:      Simple
extra-doc-files: CHANGELOG.md

common warnings
    ghc-options: -Wall -Wno-name-shadowing

library
    import:           warnings
    exposed-modules: 
        Core
      , Docker
      , Socket
    build-depends:   
        base
      , aeson
      , async
      , base
      , butcher
      , hslogger
      , http-client
      , http-conduit
      , http-types
      , network
      , record-hasfield
      , rio
      , scotty
      , serialise
      , stm
      , time
      , typed-process
      , wai-cors
      , yaml
    hs-source-dirs:   src
    default-language: Haskell2010
    default-extensions:
        DeriveFunctor
      , OverloadedRecordDot
      , BlockArguments
      , DeriveAnyClass
      , DeriveGeneric
      , LambdaCase
      , NoImplicitPrelude
      , OverloadedStrings
      , StrictData

executable ci-server
    import:           warnings
    main-is:          Main.hs
    build-depends:
        base
      , ci-server

    hs-source-dirs:   app
    default-language: Haskell2010

test-suite ci-server-test
    import:           warnings
    default-language: Haskell2010
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base
      , ci-server
      , rio
      , hspec
    default-extensions:
        DeriveFunctor
      , OverloadedRecordDot
      , BlockArguments
      , DeriveAnyClass
      , DeriveGeneric
      , LambdaCase
      , NoImplicitPrelude
      , OverloadedStrings
      , StrictData
